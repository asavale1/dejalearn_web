<%= stylesheet_link_tag "dashboard/devise/sign-up.css" %>

<div id="sign-up">
	<div class="registration-info">
		<!--<%= image_tag "dashboard/logo_image.png" %>	-->

		<h2>Sign up to create packets</h2>
	</div>
	<div class="registration-form">
		<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
			<%= devise_error_messages! %>

			<div><%= f.label :email %><br />
			<%= f.email_field :email, autofocus: true, class: "text" %></div>

			<div><%= f.label :password %><br />
			<%= f.password_field :password, autocomplete: "off", class: "text" %></div>

			<div><%= f.label :password_confirmation %><br />
			<%= f.password_field :password_confirmation, autocomplete: "off", class: "text" %></div>

			<div><%= f.submit "Sign up", class: "submit" %></div>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
</div>
