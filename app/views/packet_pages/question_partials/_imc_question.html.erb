<div class="imc-base" id="question-id-<%= @index %>">
	<table class="imc-title-table">
		<tr>
			<td>
				<h3 class="imc-title">Image Multiple Choice Exercise</h3>
			</td>
			<td>
				<%= button_tag image_tag("dashboard/trash.png"), class: "delete", onclick: "deleteQuestion(#{@index})" %>
			</td>
		</tr>
	</table>
	
	<table class="imc-table">
		<tr>
			<td>
				<table class="imc-table-left">
					<%= hidden_field_tag "type-#{@index}", "IMC", class: "types" %>
					<%= hidden_field_tag "answer-#{@index}", nil, class: "answers" %>
					<tr>
						<td>
							<%= text_field_tag("question-#{@index}", nil, placeholder: "Enter the question", class: "imc-text field", onkeyup: "fullVerify()") %>
						</td>
					</tr>
					<tr>
						<td>
							<%= text_field_tag("hint-#{@index}", nil, placeholder: "Enter a hint (optional)", class: "imc-hint") %>
						</td>
					</tr>
					<tr>
						<td>
							<%= text_field_tag("optionA-#{@index}", nil, placeholder: "Option A", class: "imc-option field", onkeyup: "fullVerify()") %>
							<%= radio_button_tag("option-#{@index}", "1", false, onclick: "setIMCAnswer(#{@index})") %>
						</td>
					</tr>
					<tr>
						<td>
							<%= text_field_tag("optionB-#{@index}", nil, placeholder: "Option B", class: "imc-option field", onkeyup: "fullVerify()") %>
							<%= radio_button_tag("option-#{@index}", "2", false, onclick: "setIMCAnswer(#{@index})") %>
						</td>
					</tr>
					<tr>
						<td>
							<%= text_field_tag("optionC-#{@index}", nil, placeholder: "Option C", class: "imc-option field", onkeyup: "fullVerify()") %>
							<%= radio_button_tag("option-#{@index}", "3", false, onclick: "setIMCAnswer(#{@index})") %>
						</td>
					</tr>
					<tr>
						<td>
							<%= text_field_tag("optionD-#{@index}", nil, placeholder: "Option D", class: "imc-option field", onkeyup: "fullVerify()") %>
							<%= radio_button_tag("option-#{@index}", "4", false, onclick: "setIMCAnswer(#{@index})") %>
						</td>
					</tr>
				</table>
			</td>
			<td>
				<table class="imc-table-right">
					<tr>
						<td>
							<div class="imc-image-box" >
								<%= file_field_tag "uploadType1-#{@index}", class: "field", onchange: "fullVerify()" %>
							</div>
						</td>
					</tr>
					<tr>
						<td>
							<%= text_field_tag("uploadType2-#{@index}", nil, placeholder: "Image URL", class: "imc-image-text") %>
						</td>
					</tr>
				</table>
			</td>
		</tr>
	</table>
	
</div>