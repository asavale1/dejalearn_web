<div class="mc-base" id="question-id-<%= @index %>">
	<table class="mc-title-table">
		<tr>
			<td>
				<h3 class="mc-title">Multiple Choice Exercise</h3>
			</td>
			<td>
				<%= button_tag image_tag("dashboard/trash.png"), class: "delete", onclick: "deleteQuestion(#{@index})" %>
			</td>
		</tr>
	</table>
	
	<table class="mc-table">
		<%= hidden_field_tag "type-#{@index}", "MC" %>
		<%= hidden_field_tag "answer-#{@index}", nil %>
		<tr>
			<td>
				<%= text_field_tag("question-#{@index}", nil, placeholder: "Enter the question", class: "mc-text", onkeyup: "verifyQuestion(#{@index})") %>
			</td>
		</tr>
		<tr>
			<td>
				<%= text_field_tag("hint-#{@index}", nil, placeholder: "Enter a hint (optional)", class: "mc-hint") %>
			</td>
		</tr>
		<tr>
			<td>
				<%= text_field_tag("optionA-#{@index}", nil, placeholder: "Option A", class: "mc-option", onkeyup: "verifyOptionA(#{@index})") %>
				<%= radio_button_tag("option-#{@index}", "1", false, onclick: "setMCAnswer(#{@index})") %>
			</td>
		</tr>
		<tr>
			<td>
				<%= text_field_tag("optionB-#{@index}", nil, placeholder: "Option B", class: "mc-option", onkeyup: "verifyOptionB(#{@index})") %>
				<%= radio_button_tag("option-#{@index}", "2", false, onclick: "setMCAnswer(#{@index})") %>
			</td>
		</tr>
		<tr>
			<td>
				<%= text_field_tag("optionC-#{@index}", nil, placeholder: "Option C", class: "mc-option", onkeyup: "verifyOptionC(#{@index})") %>
				<%= radio_button_tag("option-#{@index}", "3", false, onclick: "setMCAnswer(#{@index})" ) %>
			</td>
		</tr>
		<tr>
			<td>
				<%= text_field_tag("optionD-#{@index}", nil, placeholder: "Option D", class: "mc-option", onkeyup: "verifyOptionD(#{@index})") %>
				<%= radio_button_tag("option-#{@index}", "4", false, onclick: "setMCAnswer(#{@index})") %>
			</td>
		</tr>
	</table>
</div>
