<%= stylesheet_link_tag "sign-in.css" %>
<%= javascript_include_tag "sign-in.js" %>


<div id="sign-in">
	<div id="top">
		<div id="links">
			<%= image_tag "dashboard/logo_image.png" %>	
			<div>	
				<%= button_tag "Sign up", onclick: "signup()", id: "sign-up-button" %>
			</div>
		</div>

		<div id="form">
			<div>
				<%= form_for(@user_log_in, :url => { :action => "log_in" }) do |f| %>
					<div>
					<%= f.email_field :email, autofocus: true, placeholder: "email", class: "text" %></div>

					<div>
					<%= f.password_field :password, autocomplete: "off", placeholder: "password", class: "text" %></div>

					<div><%= f.submit "Log in", class: "submit" %></div>
				<% end %>
			</div>
		</div>
	</div>
	<div id="bottom">
		<div id="sign-up">
		<%= form_for(@user_sign_up, :url => { :action => "sign_up" }) do |f| %>
				<div id="fields">
					<div><%= f.label :email %><a data-toggle="tooltip" data-placement="top" title="first tooltip">?</a><br />
					<%= f.email_field :email, autofocus: true, class: "text" %></div>

					<div><%= f.label :password %><a data-toggle="tooltip" data-position="top" title="second tooltip">?</a><br />
					<%= f.password_field :password, autocomplete: "off", class: "text" %></div>

					<div><%= f.label :password_confirmation %><br />
					<%= f.password_field :password_confirmation, autocomplete: "off", class: "text" %></div>
				</div>
				<div id="submit">
					<%= f.submit "Sign up", class: "submit" %>
				</div>
			<% end %>
		</div>
	</div>
</div>

